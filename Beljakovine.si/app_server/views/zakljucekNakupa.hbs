<body>
    <div id="main" class="container-fluid">
        <!-- Progress bar -->
        <div id="bar-kosarica" class="progress">
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 33.3%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><strong>Izbor izdelkov</strong></div>
            <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 33.3%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"><strong>Potrditev nakupa</strong></div>
            <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width:33.4%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><strong>Dostava in plačilo</strong></div>
        </div>
        <!-- Izbira naslova za dostavo-->
        <form>
            <div class="naslov-zakljucek">
                <h2>Naslov za dostavo</h2>
                <div class="row m-0">
                    <!-- Kartica -->
                    <div class="card" style="width: 25em; margin-top: 1%;">
                        <div class="card-body">
                            <h5 class="card-title">Privzeti naslov</h5>
                            <p style="font-size: 0.8em;" class="card-text">Janez Novak <br> Dunajska cesta 120 <br> 1000, Ljubljana</p>
                            <a href="profil" class="card-link" style="float: right;">Spremenite privzeti naslov</a>
                        </div>
                    </div>
                    <!-- Checkbox -->
                    <div class="izberiNaslov-zakljucek">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="izbiraNaslova" id="privzetiNaslov" value="option1" checked>
                            <label class="form-check-label" for="privzetiNaslov">
                                Privzeti naslov
                            </label>
                        </div>
                        <div class="form-check" style="margin-top: 2%">
                            <input class="form-check-input" type="radio" name="izbiraNaslova" id="drugNaslov" value="option2">
                            <label class="form-check-label" for="drugNaslov">
                                Izberite drug naslov
                            </label>
                        </div>
                    </div>
                </div>
                <!-- Skrito polje-->
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="drugNaslov" style="margin-top: 2%; margin-left:-3.5%">
                        <input type="text" class="form-control" placeholder="Ime" style="margin-top: 1%" disabled>
                        <input type="text" class="form-control" placeholder="Priimek" style="margin-top: 1%" disabled>
                        <input class="form-control" type="text" placeholder="Naslov" style="margin-top: 5%" disabled>
                        <input type="text" class="form-control" placeholder="Mesto" style="margin-top: 1%" disabled>
                        <input type="text" class="form-control" placeholder="Poštna številka" style="margin-top: 1%" disabled>
                    </div>
                </div>
            </div>
            <!-- Izbira načina dostave -->
            <div class="nacin-zakljucek">
                <h2>Način dostave</h2>
                <div class="izberiDostavo-zaklucek" Style="margin-top: 1%">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="izbiraNacina" id="Posta" value="option1" checked>
                        <label class="form-check-label" for="Posta">
                            Pošta Slovenije - 3.00 €
                        </label>
                        <small class="text-muted"><br>Predvidena dostava: 5. 11. 2020</small>
                    </div>
                    <div class="form-check" style="margin-top: 0.4%">
                        <input class="form-check-input" type="radio" name="izbiraNacina" id="GLS" value="option2">
                        <label class="form-check-label" for="GLS">
                            GLS - 5.00 €
                        </label>
                        <small class="text-muted"><br>Predvidena dostava: 3. 11. 2020</small>
                    </div>
                </div>
            </div>
            <!-- Plačilo -->
            <div class="nacin-zakljucek">
                <h2>Način plačila</h2>
                <div class="izberiPlacilo" style="margin-top: 1%">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="izbiraPlacila" id="poPrevzemu" value="option3" checked>
                        <label class="form-check-label" for="poPrevzemu">
                            Plačilo po prevzemu
                        </label>
                    </div>
                    <div class="form-check" style="margin-top: 0.4%">
                        <input class="form-check-input" type="radio" name="izbiraPlacila" id="kartica" value="option1">
                        <label class="form-check-label" for="kartica">
                            Kreditna kartica
                        </label>
                    </div>
                </div>
                <div style="padding-top: 2%">
                    <div class="row m-0">
                        <div class="col-md-3 mb-3">
                            <label for="cc-name">Imetnik kartice</label>
                            <input type="text" class="form-control" id="cc-name" placeholder="Ime Priimek" required>
                            <small class="text-muted">Polno ime, kot je napisano na kartici</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-number">Številka kartice</label>
                            <input type="text" class="form-control" id="cc-number" placeholder="XXXX-XXXX-XXXX-XXXX" required>
                        </div>
                    </div>
                    <div class="row m-0">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">Datum poteka</label>
                            <input type="text" class="form-control" id="cc-expiration" placeholder="XX-XX" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiration">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="XXX" required>
                            <small class="text-muted">Koda na zadnji strani kartice</small>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div style="margin-top: 6%">
            <div class="row m-0">
                <a href="kosarica" role="button" id="nazaj-kosarica"class="btn btn-outline-secondary">Nazaj</a>
                <button type="button" id="naprej-kosarica"class="btn btn-success">Končajte z nakupom</button>
            </div>
        </div>
    </div>
</body>